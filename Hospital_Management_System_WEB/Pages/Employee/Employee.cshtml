@page
@model EmployeeModel
@{
    ViewData["Title"] = "Employee";
}

<style>
    .table-style {
        width: 100%;
        border-collapse: collapse;
    }

        .table-style th,
        .table-style td {
            padding: 8px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table-style th {
            background-color: #f2f2f2;
        }

        .table-style tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-style tr:hover {
            background-color: #e9e9e9;
        }

    .edit-link,
    .delete-link {
        text-decoration: none;
        padding: 5px;
        margin-right: 5px;
        color: #007bff;
    }

    .delete-link {
        color: #dc3545;
    }
</style>

<h1>Employee Page</h1>

<p>
    <a asp-page="Create">Insert new Employee</a>
</p>

@if (Model.EmployeesDTOs.Succeeded is true)
{
    <table class="table-style">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Full title</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.EmployeesDTOs.Result)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Mobile</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@employee.ID" class="btn btn-primary">Update</a>
                        <a asp-page="./Details" asp-route-id="@employee.ID" class="btn btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@employee.ID" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @if (!string.IsNullOrEmpty(Model.EmployeesDTOs.PreviousPage?.ToString()))
            {
                <li class="page-item">
                    <a class="page-link" href="?PageNumber=@(Model.EmployeesDTOs.PageNumber - 1)&PageSize=@Model.EmployeesDTOs.PageSize">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.EmployeesDTOs.TotalPages; i++)
            {
                <li class="page-item @(Model.EmployeesDTOs.PageNumber == i ? "active" : "")">
                    <a class="page-link" href="?PageNumber=@i&PageSize=@Model.EmployeesDTOs.PageSize">@i</a>
                </li>
            }

            @if (!string.IsNullOrEmpty(Model.EmployeesDTOs.NextPage?.ToString()))
            {
                <li class="page-item">
                    <a class="page-link" href="?PageNumber=@(Model.EmployeesDTOs.PageNumber + 1)&PageSize=@Model.EmployeesDTOs.PageSize">Next</a>
                </li>
            }
        </ul>
    </nav>

    <h2>Claim details</h2>
    <ul>
        @foreach (var claim in User.Claims)
        {
            <li><strong>@claim.Type</strong>: @claim.Value</li>
        }
    </ul>
}
else
{
    <p>No employees found.</p>
}
