@page
@model Hospital_Management_System_WEB.Pages.Employee.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="OnPostAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UpdateEmployeeDTO.Result.FirstName" class="control-label"></label>
                <input asp-for="UpdateEmployeeDTO.Result.FirstName" class="form-control" />
                <span asp-validation-for="UpdateEmployeeDTO.Result.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateEmployeeDTO.Result.LastName" class="control-label"></label>
                <input asp-for="UpdateEmployeeDTO.Result.LastName" class="form-control" />
                <span asp-validation-for="UpdateEmployeeDTO.Result.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateEmployeeDTO.Result.Password" class="control-label"></label>
                <input asp-for="UpdateEmployeeDTO.Result.Password" class="form-control" />
                <span asp-validation-for="UpdateEmployeeDTO.Result.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateEmployeeDTO.Result.Email" class="control-label"></label>
                <input asp-for="UpdateEmployeeDTO.Result.Email" class="form-control" />
                <span asp-validation-for="UpdateEmployeeDTO.Result.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateEmployeeDTO.Result.Mobile" class="control-label"></label>
                <input asp-for="UpdateEmployeeDTO.Result.Mobile" class="form-control" />
                <span asp-validation-for="UpdateEmployeeDTO.Result.Mobile" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UpdateEmployeeDTO.Result.ActiveIs" /> @Html.DisplayNameFor(model => model.UpdateEmployeeDTO.Result.ActiveIs)
                </label>
            </div>
            <input type="hidden" asp-for="UpdateEmployeeDTO.Result.ID" />
            <div class="form-group">
                <input type="submit" value="Update Employee" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Employee">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
